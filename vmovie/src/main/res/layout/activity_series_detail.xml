<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:zgy="http://schemas.android.com/apk/res-auto"
    tools:context="com.gsfh.myteamwork.vmovie.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="3">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/activity_series_detail_videoplayer_standard"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <LinearLayout
        android:id="@+id/ll_backstagedetail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/seriesdetail_back_im"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:padding="15dp"
            android:src="@drawable/abc_ab_back_alphai" />


        <TextView
            android:id="@+id/seriesdetail_title_tv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="幕后文章"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/seriesdetail_share_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/video_lan_share" />

    </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_weight="6">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/seriesdetail_itemsort_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="第十集 你大战我"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorblack"

                   />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="废物点心 "
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                   />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_update_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="更新 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_many_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="集数 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="类型 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="废物点心 "
                    android:textSize="14sp"
                    android:textColor="@color/colorblack"
                    android:lines="2"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_showall_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="查看全部"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:drawableRight="@drawable/dropdown"
                    android:clickable="true"
                    android:visibility="gone"
                    />
   <com.gsfh.myteamwork.vmovie.widget.SlidingTabLayout
       android:id="@+id/activity_seriesdetail_tabs_tabll"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       zgy:indicatorHeight="0dp"
       zgy:bottomLineHeight="0dp"

       android:background="@color/colorgary"
       />


               <!--<TableLayout-->
                   <!--android:id="@+id/activity_seriesdetail_title_tabll"-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="60dp">-->
               <!--</TableLayout>-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_seriesdetail_title_vp"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">
                </android.support.v4.view.ViewPager>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>






    <LinearLayout
        android:id="@+id/activity_series_buttom_bar2_ll"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorwrite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_series_detail_comment_reply_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"


            android:drawableRight="@drawable/reply_edit"
            android:layout_marginRight="10dp"


            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:hint="我来说两句..."
            android:completionThreshold="1"
            android:lines="1"
            android:textCursorDrawable="@null"
            android:background="@null"


            />


        <TextView
            android:id="@+id/activity_series_detail_comment_cach_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"


            android:drawableLeft="@drawable/details_bottom_cache"
             />
        <TextView
            android:id="@+id/activity_series_detail_comment_title2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20"

            android:drawableLeft="@drawable/details_bottom_comment"
            />

    </LinearLayout>
</LinearLayout>
