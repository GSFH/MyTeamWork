<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gsfh.myteamwork.vmovie.MainActivity">

    <LinearLayout
        android:id="@+id/ll_backstagedetail_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backstagedetail_back_im"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:padding="15dp"
            android:src="@drawable/abc_ab_back_alphai" />


        <TextView
            android:id="@+id/backstagedetail_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="幕后文章"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/backstagedetail_share_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/video_lan_share" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="播放器占位" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:layout_weight="6">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
          >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/backstagedetail_title22"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="center"
                  android:background="#00ff00"
                   />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="第十集 你大战我"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorblack"

                   />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="废物点心 "
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                   />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_update_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="更新 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_many_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="集数 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="类型 "
                    android:textSize="10sp"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/seriesdetail_itemsort_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="废物点心 "
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorblack"
                    android:lines="2"
                    />

               <!--<TableLayout-->
                   <!--android:id="@+id/activity_seriesdetail_title_tabll"-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="60dp">-->
               <!--</TableLayout>-->
                <android.support.v4.view.ViewPager
                    android:id="@+id/activity_seriesdetail_title_vp"
                    android:layout_width="match_parent"
                    android:layout_height="600dp">
                </android.support.v4.view.ViewPager>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"

                    android:background="#00ff00"
                    android:text="xia" />


            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>






    <LinearLayout
        android:id="@+id/ll_backstagedetail_buttom_bar2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_side_select_menu_iv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"

            android:padding="15dp"
            android:src="@drawable/home_like" />

        <ImageView
            android:id="@+id/s22"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onClick"
            android:padding="15dp"
            android:src="@drawable/movie_detail_bottom_share_icon" />

        <TextView
            android:id="@+id/main_title2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="幕后文章"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/main_search_iv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/video_lan_share" />

    </LinearLayout>
</LinearLayout>
