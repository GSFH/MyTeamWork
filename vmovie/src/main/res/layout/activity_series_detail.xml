<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:zgy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gsfh.myteamwork.vmovie.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/activity_series_detail_videoplayer_standard"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <LinearLayout
            android:id="@+id/ll_backstagedetail_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"


            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seriesdetail_back_im"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:padding="15dp"
                android:src="@drawable/abc_ab_back_alphai" />


            <TextView
                android:id="@+id/seriesdetail_title_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"

                />

            <ImageView
                android:id="@+id/seriesdetail_share_iv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:src="@drawable/video_lan_share" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


<TextView
    android:layout_width="wrap_content"
    android:layout_height="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/seriesdetail_itemsort_title_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="10dp"
                        android:text="第十集 你大战我"
                        android:textColor="@color/colorblack"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:clickable="true"
                        android:drawableTop="@drawable/attention"
                        android:gravity="center"
                        android:text="999人订阅" />


                </LinearLayout>

                <TextView
                    android:id="@+id/seriesdetail_itemsort_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="废物点心 "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seriesdetail_itemsort_update_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="更新 "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seriesdetail_itemsort_many_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="集数 "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seriesdetail_itemsort_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:text="类型 "
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/seriesdetail_itemsort_detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="废物点心 "
                    android:textColor="@color/colorblack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/seriesdetail_itemsort_showall_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:drawableRight="@drawable/dropdown"
                    android:gravity="center"
                    android:text="查看全部"
                    android:visibility="gone" />

            
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal">
    <com.gsfh.myteamwork.vmovie.widget.SlidingTabLayout
        android:id="@+id/activity_seriesdetail_tabs_tabll"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        zgy:bottomLineHeight="0dp"
        android:background="@color/colorgary"
        zgy:indicatorHeight="2dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorgary"
        />
</LinearLayout>
                    



               <com.gsfh.myteamwork.vmovie.widget.MyListView
                   android:id="@+id/series_show_lv"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"/>
                <!--<ListView-->
                   <!--android:id="@+id/series_show_lv"-->
                   <!--android:layout_width="match_parent"-->
                   <!--android:layout_height="wrap_content"/>-->

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/activity_series_buttom_bar2_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorwrite"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/activity_series_detail_comment_reply_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableRight="@drawable/reply_edit"


            />

        <EditText
            android:id="@+id/activity_series_detail_editv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@null"
            android:completionThreshold="1"
            android:hint="我来说两句..."
            android:lines="1"
            android:textCursorDrawable="@null"


            />


        <TextView
            android:id="@+id/activity_series_detail_comment_cach_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/details_bottom_cache"


            android:gravity="center" />

        <TextView
            android:id="@+id/activity_series_detail_comment_title2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/details_bottom_comment"
            android:gravity="center"

            android:text="20" />

    </LinearLayout>

</LinearLayout>
