<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgary" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
    />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/seriesdetailcomment_explv_item_icon_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ic_launcher" />

        <TextView

            android:id="@+id/seriesdetailcomment_explv_item_countup_tv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:drawableLeft="@drawable/home_like"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingRight="25dp"
            android:text="0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/textView"


            android:layout_toRightOf="@+id/seriesdetailcomment_explv_item_icon_iv"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/seriesdetailcomment_explv_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字"
                android:textColor="@color/colormiddlexgary" />


            <TextView
                android:id="@+id/seriesdetailcomment_explv_item_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="张英涛"
                android:textColor="@color/colormiddlegary"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/seriesdetailcomment_explv_item_context_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="top"
                android:lines="2"
                android:text="评论"
                android:textSize="16dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>