<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/slide_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ImageView
            android:id="@+id/slide_window_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/default_avatar"
            android:clickable="true"
            android:onClick="toLoad"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/side_subscribe"
            android:textColor="#D8D8D8"
            android:text="我的订阅"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/side_cache"
            android:textColor="#D8D8D8"
            android:text="我的缓存"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/side_collect"
            android:textColor="#D8D8D8"
            android:text="我喜欢的"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/slide_guide_rg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/slide_guide_rb_home"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="首页"
                android:textColor="@color/slide_text_color_home"
                android:drawableLeft="@drawable/select_slide_main"
                android:onClick="toHome"/>
            <RadioButton
                android:id="@+id/slide_guide_rb_series"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="系列"
                android:textColor="@color/slide_text_color_home"
                android:drawableLeft="@drawable/select_slide_series"
                android:onClick="toSeries"/>
            <RadioButton
                android:id="@+id/slide_guide_rb_backstage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="幕后"
                android:textColor="@color/slide_text_color_home"
                android:drawableLeft="@drawable/select_slide_backstage"
                android:onClick="toBackStage"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/slide_close_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/side_close"
                android:onClick="closeWindow"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>