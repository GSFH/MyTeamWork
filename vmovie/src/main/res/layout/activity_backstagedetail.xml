<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gsfh.myteamwork.vmovie.MainActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/activity_series_detail_videoplayer_standard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="gone"/>


        <LinearLayout
            android:id="@+id/ll_backstagedetail_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:background="@color/colorPrimaryDark"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/seriesdetail_back_im"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClick"
                android:padding="15dp"
                android:src="@drawable/abc_ab_back_alphai" />


            <TextView
                android:id="@+id/seriesdetail_title_tv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="幕后文章"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/seriesdetail_share_iv"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:src="@drawable/video_lan_share" />

        </LinearLayout>

    </RelativeLayout>





    <com.github.lzyzsd.jsbridge.BridgeWebView
        android:id="@+id/first_detail_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
       >
    </com.github.lzyzsd.jsbridge.BridgeWebView>
    <LinearLayout
        android:id="@+id/activity_backstagedetail_webv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/main_side_select_menu_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"

            android:src="@drawable/home_like"
            android:onClick="onClick"/>
        <ImageView
            android:id="@+id/s2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/movie_detail_bottom_share_icon"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/main_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="幕后文章"/>
        <ImageView
            android:id="@+id/main_search_iv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="15dp"
            android:src="@drawable/video_lan_share"/>

    </LinearLayout>
</LinearLayout>
